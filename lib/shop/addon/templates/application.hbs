
{{#if this.isEmpty}}
<div class="my-8">
  <table class="min-w-full table-auto">
    <thead class="justify-between">
      <tr class="bg-gray-800">
        <th class="px-4 py-2">
          <span class="text-gray-300">Item</span>
        </th>
        <th class="px-4 py-2">
          <span class="text-gray-300">Price</span>
        </th>
        <th class="px-4 py-2">
          <span class="text-gray-300">Author</span>
        </th>
        <th class="px-4 py-2">
          <span class="text-gray-300">Amount</span>
        </th>
        <th class="px-4 py-2">
          <span class="text-gray-300">Total</span>
        </th>
      </tr>
    </thead>

    <tbody class="bg-gray-200">
      {{#each this.cartContents as |shopItem|}}
        <tr 
          class="bg-white border-4 text-center border-gray-200 hover:bg-gray-100">
          <td class="text-sm">
            {{shopItem.name}}
          </td>
          
          <td class="text-xs">
            ${{shopItem.price}}
          </td>
          
          <td class="text-xs">
            {{shopItem.authorName}}
          </td>
          
          <td class="text-xs">
            {{shopItem.amount}}
          </td>
          
          <td class="text-xs">
            $ {{shopItem.totalPrice}}
          </td>

        </tr> 
      {{/each}}
    </tbody>
  </table>


<div class="grid min-h-screen place-items-center">
  <div class="w-11/12 p-12 bg-white sm:w-8/12 md:w-1/2 lg:w-5/12">
    <h1 class="text-xl font-semibold">Thank you for your purchase, <span class="font-normal">please fill in your information to continue</span></h1>
    <form class="mt-6">
      <div class="flex justify-between gap-3">
        <span class="w-1/2">
          <label for="firstname" class="block text-xs font-semibold text-gray-600 uppercase">
            Firstname
            <Input 
              @value={{this.firstName}}
              @id="firstname" type="text" name="firstname" placeholder="John" autocomplete="given-name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none   focus:bg-gray-300 focus:shadow-inner" required />
          </label>
        </span>
        <span class="w-1/2">
          <label for="lastname" class="block text-xs font-semibold text-gray-600 uppercase">
            Lastname
            <Input 
              @value={{this.lastName}}
              @id="lastname" type="text" name="lastname" placeholder="Doe" autocomplete="family-name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
          </label>
        </span>
      </div>
      <label for="email" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">
        E-mail
        <Input 
          @value={{this.email}}
          @id="email" type="email" name="email" placeholder="john.doe@company.com" autocomplete="email" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      </label>
      <label for="street" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">
        Street
        <Input 
          @value={{this.street}}
          @id="street" type="text" name="street" placeholder="Your street goes here" autocomplete="email" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      </label>
      <label for="town" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">
        Town
        <Input 
          @value={{this.town}}
          @id="town" type="text" name="town" placeholder="Your town goes here" autocomplete="email" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      </label>
      
      <button 
        disabled={{this.isDisabled}}
        {{on 'click' this.orderItems}}
        type="submit" class="w-full py-3 mt-6 font-medium tracking-widest  uppercase  shadow-lg {{if this.isDisabled "disabled: bg-gray-400 pointer-events-none text-gray-100" "bg-gray-800 focus:outline-none text-white hover:bg-gray-600 hover:shadow-none"}}">
        Order
      </button>
 
    </form>
  </div>
</div>



</div>


{{else}}
  <div class="bg-red-300 border-red-800 text-red-800 border-t-4 rounded  px-4 py-3 shadow-md my-2" role="alert">
    <div class="flex align-items justify-center">
      <div class="font-bold block text-center">Please add books in the cart first</div>
    </div>
  </div>

{{/if}}