{{#if @model}}
  <Table @header={{array 'ID' 'Email' ' '}} >
    {{#each @model as |invitation|}}
      <tr class="bg-white border-4 text-center border-gray-200">
        <td>
          {{invitation.id}}
        </td>
        <td>
          {{invitation.email}}
        </td>
        <td>
          <button
            type="button"
            class="bg-red-600 text-white px-6 py-2 my-2 rounded outline-none hover:bg-red-400"
            {{on 'click' (fn this.removeInvitation invitation)}}
            >Remove</button>
        </td>
      </tr>
    {{/each}}
  </Table>
{{else}}
  <Alert @color="red">No records in database</Alert>
{{/if}}