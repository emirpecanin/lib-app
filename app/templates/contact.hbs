<h1 class="h2 my-3">Contact Page</h1>
<div class="row justify-content-left">
  
  <form>
    <p>If you have any question or feedback please leave a message with your email address.</p>
    <div class="form-group">
      <label for="email" class="w-100">
        Email
        <Input
          @type="email"
          @id="email"
          @value={{this.email}}
          placeholder="Your email adress"
          class="form-control"
        />
      </label>
    </div>

    <div class="form-group">
      <label for="text-message" class="w-100">
        Message
        <Textarea 
          @value={{this.message}}
          placeholder="Your message (at least 5 characters)" 
          rows="7"
          class="form-control" 
        />
      </label>
    </div>
    
    <button
      class="btn btn-primary"
      type="button"
      disabled={{this.isDisabled}}
      {{on 'click' this.sendMessage}}
    >
      Send message
    </button>

  </form>
</div>

<div class="row justify-content-center mt-3">
  {{#if this.alertMessage}}
    <div class="alert alert-success">{{this.alertMessage}}</div>
  {{/if}}
</div>

<div class="row justify-content-center mt-3">
  {{outlet}}
</div>
