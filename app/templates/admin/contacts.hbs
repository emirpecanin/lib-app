<h2 class="h2 my-3">Contacts</h2>
{{#if @model}}
  <table class="table table-bordered table-stripped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Message</th>
        <th>Delete message</th>
      </tr>
    </thead>
    <tbody>
      
      {{#each @model as |message|}}
        <tr>
          <th>{{message.id}}</th>
          <th>{{message.email}}</th>
          <th>{{message.message}}</th>
          <th>
            <button 
              type="button" 
              class="btn btn-danger"
              {{on 'click' (fn this.deleteMessage message)}}
              >Delete</button>
          </th>
        </tr>
      {{/each}}
      
    </tbody>
  </table>
{{else}}
  <div class="alert alert-danger" role="alert">
    No messages received yet.
  </div>
{{/if}}